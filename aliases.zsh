alias l='CLICOLOR_FORCE=1 ls -G'
alias ll='CLICOLOR_FORCE=1 ls -GFlh'
alias l.='CLICOLOR_FORCE=1 ls -GA'
alias ll.='CLICOLOR_FORCE=1 ls -GFalh'
alias lsd='CLICOLOR_FORCE=1 ls -ld *(-/DN)' ## list only dirs
alias lsh='CLICOLOR_FORCE=1 ls -d .*' # list only dot files
alias llh='CLICOLOR_FORCE=1 ls -ld .*' # list only dot files (long form)

alias du1='du -chs *(/)' ## du with depth 1

alias d='dirs -v'

alias cls='clear'

alias lv='/usr/local/share/vim/vim74/macros/less.sh'
alias vr='vim -R'

